@page "/contact"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms

<div>
    <!-- Hero Section -->
    <section class="bg-primary py-20">
        <div class="w-full container mx-auto px-4 sm:px-2 md:px-14 lg:px-18 xl:px-[88px] max-w-[1440px]">
            <div class="max-w-2xl">
                <h1 class="text-4xl md:text-5xl font-heading font-bold text-white mb-4">
                    Contact Us
                </h1>
                <p class="text-white/80 text-lg">
                    Have questions or ready to book? We're here to help make your stay perfect.
                </p>
            </div>
        </div>
    </section>

    <!-- Contact Content -->
    <section class="py-20">
        <div class="w-full container mx-auto px-4 sm:px-2 md:px-14 lg:px-18 xl:px-[88px] max-w-[1440px]">
            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Contact Info -->
                <div class="space-y-8">
                    <div>
                        <h2 class="text-2xl font-heading font-bold text-foreground mb-6">
                            Get in Touch
                        </h2>
                        <p class="text-foreground leading-relaxed mb-8">
                            Whether you have a question about our apartments, amenities, or need assistance 
                            with a booking, our team is ready to assist you.
                        </p>
                    </div>

                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-foreground mb-1">Address</h3>
                                <p class="text-foreground">
                                    Golf Course Drive<br />
                                    Nairobi, Kenya
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-foreground mb-1">Phone</h3>
                                <a href="tel:+254XXXXXXXXX" class="text-foreground hover:text-primary transition-colors">
                                    +254 XXX XXX XXX
                                </a>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-foreground mb-1">Email</h3>
                                <a href="mailto:info@golfviewapartments.com" class="text-gray-600 hover:text-primary transition-colors">
                                    info@golfviewapartments.com
                                </a>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                                <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-foreground mb-1">Office Hours</h3>
                                <p class="text-gray-600">
                                    Mon - Fri: 9:00 AM - 6:00 PM<br />
                                    Sat: 10:00 AM - 4:00 PM<br />
                                    Sun: By Appointment
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Map Placeholder -->
                    <div class="mt-8 rounded-xl overflow-hidden border border-gray-200 h-[250px] bg-gray-50 flex items-center justify-center">
                        <div class="text-center text-gray-400">
                            <svg class="h-12 w-12 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <p class="text-sm">Interactive map coming soon</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="bg-white rounded-xl p-8 shadow-lg">
                    <h2 class="text-2xl font-heading font-bold text-foreground mb-6">
                        Send Us a Message
                    </h2>
                    
                    <EditForm Model="@contactForm" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />
                        
                        <div class="space-y-6">
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label for="name" class="block text-sm font-medium text-foreground mb-2">
                                        Full Name *
                                    </label>
                                    <InputText id="name" @bind-Value="contactForm.Name" 
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" 
                                        placeholder="John Doe" />
                                    <ValidationMessage For="@(() => contactForm.Name)" class="text-red-500 text-sm mt-1" />
                                </div>
                                <div>
                                    <label for="email" class="block text-sm font-medium text-foreground mb-2">
                                        Email Address *
                                    </label>
                                    <InputText id="email" type="email" @bind-Value="contactForm.Email" 
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" 
                                        placeholder="john@example.com" />
                                    <ValidationMessage For="@(() => contactForm.Email)" class="text-red-500 text-sm mt-1" />
                                </div>
                            </div>

                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label for="phone" class="block text-sm font-medium text-foreground mb-2">
                                        Phone Number
                                    </label>
                                    <InputText id="phone" @bind-Value="contactForm.Phone" 
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" 
                                        placeholder="+254 XXX XXX XXX" />
                                </div>
                                <div>
                                    <label for="subject" class="block text-sm font-medium text-foreground mb-2">
                                        Subject *
                                    </label>
                                    <InputText id="subject" @bind-Value="contactForm.Subject" 
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" 
                                        placeholder="Booking Inquiry" />
                                    <ValidationMessage For="@(() => contactForm.Subject)" class="text-red-500 text-sm mt-1" />
                                </div>
                            </div>

                            <div>
                                <label for="message" class="block text-sm font-medium text-foreground mb-2">
                                    Message *
                                </label>
                                <InputTextArea id="message" @bind-Value="contactForm.Message" 
                                    rows="5"
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all resize-none" 
                                    placeholder="Tell us about your inquiry..." />
                                <ValidationMessage For="@(() => contactForm.Message)" class="text-red-500 text-sm mt-1" />
                            </div>

                            <button type="submit" 
                                class="w-full px-6 py-3 bg-accent text-white rounded-lg hover:bg-accent/90 transition-colors font-medium text-lg disabled:opacity-50 disabled:cursor-not-allowed"
                                disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span>Sending...</span>
                                }
                                else
                                {
                                    <span>Send Message</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    @if (showSuccessMessage)
                    {
                        <div class="mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
                            <p class="text-green-800 font-medium">Message Sent!</p>
                            <p class="text-green-600 text-sm">Thank you for contacting us. We'll get back to you shortly.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

@code {
    private ContactFormModel contactForm = new();
    private bool isSubmitting = false;
    private bool showSuccessMessage = false;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        showSuccessMessage = false;

        // Simulate form submission
        await Task.Delay(1000);

        // Here you would typically send the form data to your backend API
        // For example:
        // await Http.PostAsJsonAsync("api/contact", contactForm);

        showSuccessMessage = true;
        contactForm = new ContactFormModel();
        isSubmitting = false;

        // Hide success message after 5 seconds
        await Task.Delay(5000);
        showSuccessMessage = false;
    }

    public class ContactFormModel
    {
        [Required(ErrorMessage = "Name is required")]
        [StringLength(100, ErrorMessage = "Name must be less than 100 characters")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        [StringLength(255, ErrorMessage = "Email must be less than 255 characters")]
        public string Email { get; set; } = string.Empty;

        [StringLength(20, ErrorMessage = "Phone must be less than 20 characters")]
        public string? Phone { get; set; }

        [Required(ErrorMessage = "Subject is required")]
        [StringLength(200, ErrorMessage = "Subject must be less than 200 characters")]
        public string Subject { get; set; } = string.Empty;

        [Required(ErrorMessage = "Message is required")]
        [StringLength(2000, ErrorMessage = "Message must be less than 2000 characters")]
        public string Message { get; set; } = string.Empty;
    }
}